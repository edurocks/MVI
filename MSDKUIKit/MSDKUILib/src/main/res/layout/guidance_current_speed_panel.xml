<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guidance_current_speed_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/guidance_current_speed_value"
       style="?attr/guidanceCurrentSpeedPanelText"
        app:layout_constraintBottom_toTopOf="@+id/guidance_current_speed_unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guidance_current_speed_unit"
       style="?attr/guidanceCurrentSpeedPanelSecondaryText"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidance_current_speed_value" />

</androidx.constraintlayout.widget.ConstraintLayout>